@model FormularioViewModel
<div class="row loginForm">
    <div>
        <h2>Escolha seu animal e preencha o formulário abaixo.</h2>
        @if (TempData["Erro"] != null) { <p class="alert alert-success" id="successMessage">@TempData["Erro"]</p> }
        <hr />
        <label>Veterinário escolhido: @Model.Veterinario.VetNome</label><p></p>
        <label>Data escolhida: @Model.DataConsulta</label>
        <hr />
        <form asp-controller="Consulta" asp-action="Formulario" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <input asp-for="DataConsulta" type="hidden" />
                <input asp-for="VeterinarioId" type="hidden" />
            </div>
            <div class="form-group">
                <label class=" col-md-2 control-label">Horários disponíveis</label>
                <div class="col-md-10">
                    <select asp-for="HorarioEscolhido" class="form-control">
                        @foreach (String horario in Model.HorariosFiltrados)
                        {
                            <option label="@horario">@horario</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class=" col-md-2 control-label">Selecione o seu animalzinho</label>
                <div class="col-md-10">
                    <select asp-for="AnimalId" class="form-control">
                        @foreach (Animal animal in Model.Animais)
                        {
                            <option label="@animal.AnimalNome">@animal.AnimalId</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoDoProblema" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="DescricaoDoProblema" class="form-control" placeholder="Necessário mínimo de 20 caracteres" rows="3"></textarea>
                    @if (TempData["DescricaoValidator"] != null)
                    {<p class="alert alert-success" id="successMessage">@TempData["DescricaoValidator"]</p>}
                </div>
            </div>
            <div class="form-group pull-right formPullRightButton">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success " value="Marcar Consulta" />
                </div>
            </div>
        </form>
    </div>
</div>

