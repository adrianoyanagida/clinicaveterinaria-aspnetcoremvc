@model RegisterViewModel

<div class="row loginForm">
    <div>
        <h2>Registre-se digitando as informações abaixo. </h2>
        <div asp-validation-summary="All"></div>
        <hr />
        <h4>Informações da conta</h4>
        <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" role="form">
            <div class="form-group">
                <label asp-for="NomeDeUsuario" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="NomeDeUsuario" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Senha" class="form-control" />
                </div>
            </div>
            <hr />
            <h4>Informações adicionais</h4>
            <div class="form-group">
                <label asp-for="NomeCompleto" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="NomeCompleto" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataDeNascimento" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DataDeNascimento" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="CPF" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Telefone" class="form-control" />
                </div>
            </div>
            <div class="form-group pull-right formPullRightButton">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success " value="Registrar" />
                </div>
            </div>
        </form>
    </div>
</div>

