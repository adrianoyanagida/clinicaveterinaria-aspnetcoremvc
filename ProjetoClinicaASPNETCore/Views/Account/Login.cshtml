@model LoginViewModel

<div class="row loginForm">
    <div>
        <h2>Digite seus dados abaixo para logar.</h2>
        <div asp-validation-summary="All"></div>
        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
            <hr />
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="UsuarioOuEmail" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="UsuarioOuEmail" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Senha" class="form-control" />
                </div>
            </div>
            <div class="form-group pull-right formPullRightButton">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Logar" />
                </div>
            </div>
        </form>
    </div>
</div>